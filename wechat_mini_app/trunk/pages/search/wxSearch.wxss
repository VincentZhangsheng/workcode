.wxSearch{
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  /*border-top: 1rpx solid #ebebeb;*/
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 99;
}
.wxSearchInner{
  background-color: #f4f4f4;
  color: #666;
}
.wxSearchTitle{
  font-size: 24rpx;
  color: #666;
  margin:0 20rpx;
  text-align:left;
  padding: 20rpx 0 ;
}
.wxSearchMindKeyItem{
  padding: 10rpx 5rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 28rpx;
  color: cornflowerblue;
}
.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 0 20rpx;
}
.wxSearchKeyItem{
  flex: none;
  max-width:300rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
  line-height: 70rpx;
  height: 70rpx;
  background: #fff;
  border-radius: 10rpx;
  color:#212121;
  text-align: center;
  border:1rpx solid #ebebeb;
  font-size: 28rpx;
  /*margin: 10rpx;*/
  margin: 0 20rpx 20rpx 0;
  padding: 0 20rpx;
}
.wxSearchHistoryItem{
  background-color: #fff;
  /*padding: 0 20rpx;*/
  padding-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
  align-items:center;
}
.wxSearchHistoryItemText{
  flex: 8;
  font-size: 28rpx;
  color: #212121;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}
.wxSearchHistoryItemDel{
  display:flex;
  align-items:center;
}
.wxSearchDeleteAllBtn{
  background-color: #fff;
  text-align: center;
  color: #999;
  line-height: 60rpx;
  height:60rpx;
  font-size: 28rpx;
  display: block;
  padding: 10rpx 0;
}

.wxSearchHistoryItem .icon-delete{
  font-size:24rpx;
  color:#d8d8d8;
  padding: 0 40rpx;
}