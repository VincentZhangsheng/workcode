/* pages/show/show.wxss */

@import "../../component/nullTip/nullTip.wxss";
@import "../../component/showList/showList.wxss";
@import "../../component/tabbar/tabbar.wxss";

/*演出库顶部*/
.show-top{
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.show-top .city-box{
    font-size: 28rpx;
    display: inline-block;
    padding:0 30rpx;
}
.city-box .city-name {
    max-width:115rpx;
    overflow:hidden;
    float:left;
    white-space:nowrap;
    text-overflow:ellipsis;
    color: #666;
}
.show-top .search-input{
    height: 60rpx;
    flex-grow: 1;
    border:1rpx solid #ebebeb;
    border-radius: 8rpx;
    background: #f5f5f5;
    color: #999;
    font-size: 24rpx;
    text-align: center;
}
.show-top .time-wrap{
  padding:0 30rpx;
}

/*品类*/
.nav{
    display: flex;
    justify-content: space-around;
    color: #666;
    height: 69rpx;
    line-height: 69rpx;
    font-size:26rpx;
    text-align: center;
    border-bottom: 1rpx solid #e5e5e5;
}
.nav .nav-item{
    flex: auto;
}
.nav .nav-item.active{
    color: #ff7919;
    border-bottom:2px solid #ff7919
}

/*遮罩*/
.mask{
    width:100%;
    height: 100%;
    position: fixed;
    top: 100rpx;
    background: rgba(0,0,0,.2);
    z-index:1;
}
/*时间下拉*/
.dropdown-wrap{
    position: fixed;
    top: 100rpx;
    width: 100%;
    border-top:1rpx solid #e6e6e6;
    background: #fff;
    text-align: center;
    z-index: 2;
}
.dropdown-wrap .item{
    height:90rpx;
    line-height: 90rpx;
    border-bottom:1rpx solid #e6e6e6;
    font-size: 28rpx;
    color: #666;
    position: relative;
}
.dropdown-wrap .item icon{
    position: absolute;
    right:20rpx;
    top: 20rpx;
    display: none;
}
.dropdown-wrap .item.active{
    color: #ff7919
}
.dropdown-wrap .item.active icon{
    display: block;
}

/*热门城市*/
.city-wrap {
  box-sizing: border-box;
  /*padding: 0 30rpx;*/
  text-align: left;
  color: #666;
}
.city-wrap .title {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  background-color: #f6f6f6;
}
.city-wrap .hot-city {
  padding: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
  background-color: #f6f6f6;
}
.city-wrap .hot-city .city-item {
  margin: 0 20rpx 20rpx 0;
  background-color: #fff;
}
.city-item {
  padding: 0 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  text-align: center;
  border: 1px solid #e8e8e8;
  border-radius: 8rpx;
  min-width: 120rpx;
}
.city-wrap .item{
  padding: 0 30rpx;
}
