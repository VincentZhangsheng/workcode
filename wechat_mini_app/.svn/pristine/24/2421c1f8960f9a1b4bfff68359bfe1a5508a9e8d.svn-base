/**index.wxss**/
@import "../../component/showList/showList.wxss";
@import "../../component/tabbar/tabbar.wxss";
@import "../../component/nullTip/nullTip.wxss"; 

.banner{
  height: 400rpx;
  background: #ff7919;
  position: relative;
}
.logo{
  width: 311rpx;
  height: 75rpx;
  display: block;
  margin: 0 auto;
  padding-top: 80rpx;
  padding-bottom: 65rpx;
}

.search-txt{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 580rpx;
  height: 82rpx;
  background: #fff;
  border-radius: 82rpx;
  font-size: 26rpx;
  color: #999;
}
.city-box{
  position: absolute;
  top: 80rpx;
  right:0;
  height: 60rpx;
  background: rgba(0,0,0,.1);
  font-size: 24rpx;
  color: #fff;
  border-radius:60rpx 0 0 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.city-box .city-name{
  max-width:100rpx;
  overflow: hidden;
  float:left;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.city-box .icon-location{
  font-size:22rpx;
  padding-left:20rpx;
  padding-right: 10rpx;
}

.city-box .img{
  width: 19rpx;
  height: 23rpx;
  margin-right: 10rpx;
  margin-left: 20rpx;
}

.recommend{
  height: 80rpx;
  line-height: 80rpx;
  background: #fafafa;
  border-bottom:1px solid #ebebeb;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

/*查看更多*/
.look-more{
  text-align:center;
  color:#666;
  font-size:32rpx;
  width:90%;
  padding:20rpx 0;
  border:1rpx solid #ebebeb;
  margin: 30rpx 5% 10rpx 5%;
}

