page{
    background: #f5f5f5;
}
.price{
    margin: 20rpx 0;
    background: #fff;
    padding: 0 20rpx;
}

.price .tittle{
    font-size: 28rpx;
    color: #666;
    line-height: 80rpx;
}
.price .tip{
    font-size: 24rpx;
    padding-bottom: 20rpx;
    color: #ff7919;
    display: block
}

.price-box{
    /*display: flex;*/
    flex-wrap:wrap;
    margin-right: -20rpx;
}

.price-box:after{
    content:'';
    display: block;
    clear: both;
}

.price-box .price-item{
    display: flex;
    float: left;
    flex-direction: column;
    justify-content: center;
    flex:3;
    flex-wrap:wrap;
    align-items: center;
    height: 100rpx;
    width: 220rpx;
    border:1rpx solid #ebebeb;
    font-size: 28rpx;
    border-radius: 10rpx;
    position: relative;
    margin:0 20rpx 20rpx 0
}

.price-box .price-item .num{
    font-size: 20rpx;
}

.price-box .price-item2{
    width:342rpx;
}
/*.price-box .price-item:nth-child(3n),.price-box2 .price-item:nth-child(2n){
    margin:0
}*/

.price-box .price-item.past{
    color: #ccc;
    background: #fafafa;
}

.price-box .price-item.active{
    background: #ff7919;
    color: #fff;
}

.price-box .price-item image{
    position: absolute;
    width: 51rpx;
    height: 51rpx;
    top: 0;
    left: 0;
}

.price-box .price-item text{
    display: block;
}

/*选择*/
.footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}
.ticket{
    margin-top: 20rpx;
    padding: 0 20rpx;
    background: #fff;
}
.ticket .item{
    height: 105rpx;
    line-height: 105rpx;
    border-bottom: 1rpx #ebebeb dashed;
    font-size:30rpx;
    color: #333;
}

.ticket .item:last-child{
    border:none;
}
.ticket .item .unit-right{
    width: 320rpx;
    float: right;
    height: 40rpx;
    color: #808080;
}
.ticket .item .unit-right text{
    display: inline-block;
    width: 50rpx;
    height: 40rpx;
    border:1rpx solid #ebebeb;
    border-radius: 7rpx;
    line-height: 40rpx;
    text-align: center;
    vertical-align: middle;
}

.ticket .item .unit-right .num{
    /*border:1px solid #ebebeb;*/
    width: 90rpx;
    display: inline-block;
    vertical-align: middle;
    height: 40rpx;
    text-align: center;
    font-family: arial;
}

.ticket .item .unit-right image{
    width:30rpx;
    height: 32rpx;
    padding-left:40rpx;
    margin-left: 40rpx;
    border-left:1rpx solid #ebebeb;
    vertical-align: middle
}

.foot{
    height: 110rpx;
    line-height: 110rpx;
    background: #fff;
    border-top:1rpx solid #ebebeb;
    font-size: 34rpx;
    color: #666;
    text-indent: 20rpx;
}

.foot .down{
    width:34rpx;
    height: 34rpx;
    vertical-align: middle;
    margin-top: -5rpx;
    margin-right: 15rpx;
}
.foot .sure{
    width: 300rpx;
    float: right;
    border-radius: 0;
    border:none;
    background: #ff7919;
    height: 100%;
    line-height: 110rpx;
    color: #fff;
}
.foot  .price{
    color: #ff7919;
    margin-left:40rpx;
    padding-left:40rpx;
    height: 30rpx;
    line-height: 30rpx;
    vertical-align: middle;
    border-left:1rpx solid #ebebeb;
}