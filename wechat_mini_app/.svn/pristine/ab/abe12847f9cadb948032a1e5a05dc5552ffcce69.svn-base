page {
  background: #f6f6f6;
}

.city-select {
  background: #fff;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.location-bar {
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx #eee solid;
}

.city-select .current {
  border-bottom: 1px solid #e8e8e8;
}

.city-select .city-name{
  height: 90rpx;
  line-height: 90rpx;
}

.city-select .txt {
  color: #666;
}

.city-wrap {
  color: #666;
}

.city-wrap .title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  padding: 0 30rpx;
}

/*热门城市*/
.city-wrap .hot-city {
  padding:0 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.city-wrap .hot-city .city-item {
  margin: 0 20rpx 20rpx 0;
  background-color: #fff;
}

.city-item {
  padding: 0 20rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  text-align: center;
  border: 1px solid #e8e8e8;
  border-radius: 8rpx;
}

.city-wrap .city-box {
  padding: 0 30rpx;
  background: #fff;
  font-size: 28rpx;
}

.citylist-item {
  box-sizing: border-box;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #e8e8e8;
}

.location-bar .city-item{
  border:none;
  flex: auto;
  text-align: left;
}
