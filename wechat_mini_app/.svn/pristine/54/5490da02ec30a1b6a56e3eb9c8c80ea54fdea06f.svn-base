page {
  background: #f5f5f5;
  font-family: "黑体";
}

.price {
  margin: 20rpx 0;
  background: #fff;
  padding: 0 20rpx;
}

.price .tittle {
  font-size: 28rpx;
  color: #666;
  line-height: 80rpx;
}

.price .tip {
  font-size: 24rpx;
  padding-bottom: 20rpx;
  color: #ff7919;
  display: block;
}

/*场次/价格*/
.price-box {
  display: flex;
  flex-wrap: wrap;
  margin-right: -25rpx;
  padding-bottom: 10rpx;
}
.price-box .price-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  width: 220rpx;
  border: 1rpx solid #ebebeb;
  font-size: 28rpx;
  border-radius: 10rpx;
  position: relative;
  margin: 0 20rpx 20rpx 0;
  text-align:center;
  overflow: hidden;
}
.price-box .price-item .chacel-tag{
  position: absolute;
  top: 0;
  right: 0;
  background: rgba(255,217,189,.5);
  height: 30rpx;
  width: 52rpx;
  font-size: 18rpx;
  text-align: center;
  color: #666;
  line-height: 30rpx;
  padding-top: 0;
}
.price-box .price-item .num {
  font-size: 24rpx;
}
.price-box .price-item2 {
  width: 342rpx;
}
.price-box .price-item.past {
  color: #ccc;
  background: #fafafa;
}
.price-box .price-item.active {
  background: #ff7919;
  color: #fff;
}
.price-box .price-item image {
  position: absolute;
  width: 51rpx;
  height: 51rpx;
  top: 0;
  left: 0;
}


/*选择*/
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
/*选择票价*/
.ticket {
  margin-top: 20rpx;
  padding: 0 20rpx;
  background: #fff;
  
}
.ticket .item {
  height: 105rpx;
  line-height: 105rpx;
  border-bottom: 1rpx #ebebeb dashed;
  font-size: 30rpx;
  color: #333;
}
.ticket .item:last-child {
  border: none;
}
.ticket .item .unit-right {
  width: 320rpx;
  float: right;
  color: #808080;
  display: flex;
  align-items: center;
}
.ticket .item .unit-right text {
  display: inline-block;
  width: 50rpx;
  height: 40rpx;
  border: 1rpx solid #ebebeb;
  border-radius: 7rpx;
  line-height: 40rpx;
  text-align: center;
}
.ticket .item .unit-right .num {
  width: 90rpx;
  display: inline-block;
  text-align: center;
  font-family: arial;
}
.ticket .item .unit-right .add {
  margin-right: 30rpx;
}
.ticket .item .unit-right .icon-basket {
  margin-left: 30rpx;
  color: #b2b2b2;
}


.select-footer {
  color: #666;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fafafa;
}

.foot {
  height: 110rpx;
  line-height: 110rpx;
  background: #fff;
  border-top: 1rpx solid #ebebeb;
  font-size: 34rpx;
  color: #666;
  text-indent: 20rpx;
}


.foot .sure {
  width: 300rpx;
  float: right;
  border-radius: 0;
  border: none;
  background: #ff7919;
  height: 100%;
  line-height: 110rpx;
  color: #fff;
}

.foot  .price {
  color: #ff7919;
  margin-left: 40rpx;
  padding-left: 40rpx;
  height: 30rpx;
  line-height: 30rpx;
  vertical-align: middle;
  border-left: 1rpx solid #ebebeb;
}

.chacel{
  padding: 25rpx 0;
  justify-content:center;
  text-align: center
}
.chacel text{
  display: block;
  width: 100%
}

.chacel .alet{
  font-size: 32rpx;
  color: #fe5d36;
}
.chacel .alet icon{
  margin-right: 10rpx;
  vertical-align: middle;
  margin-top: -5rpx;
}

.chacel .atxt{
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx
}