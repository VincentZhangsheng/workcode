@import "../style/animation.wxss";

/*列表项*/
.show-item {
  /*width: 100%;*/
  background-color: #fff;
  /*animation: fadeIn 1s;*/
  padding: 18rpx 0;
  margin: 0 25rpx;
  overflow: hidden;
  border-bottom:1px solid #F0F0F0;
  display: flex;
}

.show-item.overdue{
  opacity: 0.6;
}

.show-img {
  width: 180rpx;
  height: 240rpx;
  overflow: hidden;
  position: relative;
}
.show-img .img{
  max-width: 180rpx;
  max-height: 240rpx;
}

.show-item .item-right{
  margin-left: 25rpx;
  width:495rpx;
}

.show-item .item-right .title{
  color: #212121;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 38rpx;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  padding-top:0;
  padding-bottom:0;
}
.show-item .item-right .time,
.show-item .item-right .venue{
  font-size: 24rpx;
  color: #808080;
  line-height: 36rpx;
}
.show-item .item-right .venue{
  margin-bottom: 20rpx;
}
.show-item .item-right .price{
  color: #ff7919;
  font-size: 28rpx;
  display: inline-block;
}

.show-item .item-right .order-price{
  color: #ff7919;
  font-size: 34rpx;
  display: inline-block;
}
.order-num{
  font-size: 24rpx;
  color: #999;
}

.show-item .tag-item,
.show-box .tag-item{
    color: #ff7919;
    font-size: 20rpx;
    line-height: 30rpx;
    border:1rpx solid #ff7919;
    border-radius: 5rpx;
    padding: 5rpx 10rpx;
    margin-left: 10rpx;
    float: right;
}

.order-item{
   background-color: #fff;
   margin-bottom: 20rpx;
}
/*订单顶部*/
.order-top{
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    margin: 0 25rpx;
    align-items: center;
    border-bottom:1px solid #ebebeb;
}
.order-top .time{
    font-size: 24rpx;
    color: #999;
}
.order-top .status{
    color: #ff7919;
    font-size: 28rpx;
}
.order-top .status.cancel{
    color: #999;
}
/*订单底部按钮*/
.order-btn{
    height: 100rpx;
    display: flex;
    flex-flow: row-reverse nowrap;
    align-items: center;
}                  
.order-btn .btn{
    height: 60rpx;
    line-height: 60rpx;
    margin-right: 20rpx;
    margin-left: 0;
    font-size: 28rpx;
    color: #999;
    background-color: #fff;
    border-radius:5rpx;
}
.order-btn .btn::after{
    border-radius:10rpx;
}
.order-btn .btn.pay{
    background-color: #ff7919;
    color: #fff;
    border-color:#ff7919;
    order: -1;
}  


/*正在加载样式*/
.loading-tip{ 
    padding: 10rpx; 
    display:flex;
    line-height: 50rpx;
    font-size: 26rpx;
    color: #999;
    justify-content:center;
    align-items: center;   
} 



